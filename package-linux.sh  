#!/bin/bash

jpackage \
  --type deb \
  --input target \
  --dest dist \
  --name calculatriceDEEVEN \
  --main-jar demo-2.jar \
  --main-class com.example.CalculatriceApp \
  --icon icon.png \
  --linux-shortcut \
  --java-options "--add-opens javafx.base/com.sun.javafx.runtime=ALL-UNNAMED" \
  --verbose
